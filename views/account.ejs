<%- include('components/template') %>

<body class="bg-[#010103] text-neutral-300 font-inter"
      x-data="{ sidebarOpen: false }"
      @keydown.escape="sidebarOpen = false">

<main class="flex-grow container mx-auto px-4 py-8 animate-fade-in">

  <!-- Header -->
  <div class="flex justify-between items-center w-full mx-auto pb-4 animate-slide-in">
    <div class="flex flex-col">
      <h1 class="text-2xl font-bold text-yellow-400 animate-bounce">
        Account Information
      </h1>
      <p class="text-yellow-400/70 animate-slide-up">
        View and manage your account credentials.
      </p>
    </div>

    <!-- Breadcrumb -->
    <nav class="inline-flex py-2 px-4 rounded-xl bg-[#1c1a12] border border-yellow-500/20">
      <ol class="flex items-center space-x-2">
        <li>
          <a href="#"
             class="text-sm text-yellow-400/70 hover:text-yellow-300 flex items-center gap-2">
            <i class="fas fa-home animate-spin-slow"></i>
            <span>Home</span>
          </a>
        </li>
        <li class="text-yellow-500/40">
          <i class="fas fa-chevron-right"></i>
        </li>
        <li>
          <span class="text-sm text-yellow-300 font-medium">
            Account
          </span>
        </li>
      </ol>
    </nav>
  </div>

  <!-- Card -->
  <div class="mt-12 flex justify-center">
    <div class="w-full max-w-md bg-[#1c1a12] p-6 rounded-xl
                border border-yellow-500/20 shadow-lg animate-scale-in">

      <!-- Avatar -->
      <div class="text-center mb-6">
        <i class="fas fa-user-circle text-6xl text-yellow-400 animate-rotate"></i>
      </div>

      <h2 class="text-xl font-semibold text-center mb-4 text-yellow-300">
        Credentials
      </h2>

      <!-- Email -->
      <div class="relative mb-6">
        <input value="<%= user.email %>"
          disabled
          class="w-full px-4 py-2 rounded-lg
                 bg-[#14110a] text-white
                 border border-yellow-500/30">
        <button onclick="copyEmail()"
          class="absolute right-3 top-2 text-yellow-400/60 hover:text-yellow-300">
          <i class="fas fa-copy"></i>
        </button>
      </div>

      <!-- Password -->
      <div class="border-t border-yellow-500/20 pt-6">
        <h3 class="text-lg font-semibold text-yellow-300 mb-3">
          Set a new password
        </h3>

        <form action="/change-password" method="POST" class="space-y-4">

          <input type="password" id="currentPassword"
            placeholder="Current Password"
            class="w-full px-4 py-2 rounded-lg
                   bg-[#14110a] text-white
                   border border-yellow-500/30
                   focus:ring-2 focus:ring-yellow-500">

          <input type="password" id="newPassword"
            placeholder="New Password"
            class="w-full px-4 py-2 rounded-lg
                   bg-[#14110a] text-white
                   border border-yellow-500/30
                   focus:ring-2 focus:ring-yellow-500">

          <p class="text-sm text-yellow-400/70">
            Password must contain:<br>
            • 8+ characters<br>
            • One uppercase & lowercase<br>
            • One number
          </p>

          <button type="submit"
            class="w-full bg-yellow-500 text-neutral-900 font-medium
                   py-2 rounded-lg
                   hover:bg-yellow-600
                   transition focus:ring-2 focus:ring-yellow-400">
            Update Password
          </button>
        </form>
      </div>
    </div>
  </div>
</main>

<script>
function copyEmail() {
  const emailInput = document.querySelector('input[disabled]');
  navigator.clipboard.writeText(emailInput.value);
  alert('Email copied to clipboard!');
}
</script>

<style>
@keyframes fade-in {
  from { opacity: 0 }
  to { opacity: 1 }
}
.animate-fade-in { animation: fade-in 1s ease-in-out }

@keyframes slide-in {
  from { transform: translateX(-20px); opacity: 0 }
  to { transform: translateX(0); opacity: 1 }
}
.animate-slide-in { animation: slide-in .8s ease-in-out }

@keyframes slide-up {
  from { transform: translateY(20px); opacity: 0 }
  to { transform: translateY(0); opacity: 1 }
}
.animate-slide-up { animation: slide-up 1s ease-in-out }

@keyframes scale-in {
  from { transform: scale(.95); opacity: 0 }
  to { transform: scale(1); opacity: 1 }
}
.animate-scale-in { animation: scale-in .6s ease-in-out }

@keyframes bounce {
  0%,100% { transform: translateY(0) }
  50% { transform: translateY(-5px) }
}
.animate-bounce { animation: bounce 1.5s infinite }

@keyframes rotate {
  from { transform: rotate(0deg) }
  to { transform: rotate(360deg) }
}
.animate-rotate { animation: rotate 3s linear infinite }

@keyframes spin-slow {
  from { transform: rotate(0deg) }
  to { transform: rotate(360deg) }
}
.animate-spin-slow { animation: spin-slow 4s linear infinite }
</style>

</body>
