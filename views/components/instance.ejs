<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar { display: none; }

  #console-output {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    line-height: 1.2;
  }

  .console-line {
    padding: 4px 6px;
    margin: 1px 0;
    border-radius: 4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: 0.2s;
  }

  .console-line:hover {
    background-color: rgba(250, 204, 21, 0.08);
  }

  .internal-icon {
    color: #facc15;
    width: 12px;
    height: 12px;
  }
</style>

<nav class="relative z-50 mb-6">
  <div id="menu-items" class="hidden md:block">
    <div class="rounded-full bg-yellow-500/10 backdrop-blur-xl p-1.5 inline-flex items-center border border-yellow-500/20">

      <% const linkClass = "srv-link group rounded-full px-4 py-1.5 text-sm text-zinc-300 hover:text-yellow-400 hover:bg-yellow-500/20 transition-all duration-200 hover:scale-95"; %>

      <a href="/instance/<%= req.params.id %>" class="<%= linkClass %>">Console</a>
      <a href="/instance/<%= req.params.id %>/files" class="<%= linkClass %>">Files</a>
      <a href="/instance/<%= req.params.id %>/users" class="<%= linkClass %>">Sub Users</a>
      <a href="/instance/<%= req.params.id %>/ftp" class="<%= linkClass %>">FTP</a>
      <a href="/instance/<%= req.params.id %>/archives" class="<%= linkClass %>">Backups</a>
      <a href="/instance/<%= req.params.id %>/network" class="<%= linkClass %>">Network</a>
      <a href="/instance/<%= req.params.id %>/startup" class="<%= linkClass %>">Settings</a>

      <% if (instance.Image.includes("java")) { %>
        <a href="/instance/<%= req.params.id %>/plugins" class="<%= linkClass %>">Plugin Manager</a>
      <% } %>

      <% addons.plugins.forEach(plugin => { %>
        <% if (plugin.instancesidebar) { %>
          <% Object.entries(plugin.instancesidebar).forEach(([key, value]) => { %>
            <a href="<%= value.url.replace('%id%', req.params.id) %>" class="<%= linkClass %>">
              <%= key %>
            </a>
          <% }) %>
        <% } %>
      <% }) %>

    </div>
  </div>

  <!-- Mobile Button -->
  <div class="block md:hidden">
    <button
      onclick="openSlider()"
      class="rounded-full bg-yellow-500 text-black px-4 py-2 text-sm font-semibold hover:bg-yellow-400 transition">
      Open Menu
    </button>
  </div>
</nav>

<!-- Mobile Sidebar -->
<div id="mobileSidebar"
  class="fixed inset-0 bg-black/80 backdrop-blur-xl p-6 z-50 transform -translate-x-full transition-transform duration-300">

  <div
    onclick="closeSlider()"
    class="bg-yellow-500 text-black text-center p-2 rounded-lg font-semibold hover:bg-yellow-400 cursor-pointer mb-6">
    Close
  </div>

  <div class="flex flex-col text-white rounded-xl divide-y divide-yellow-500/10">

    <% const mobileClass = "py-2 px-4 hover:bg-yellow-500/10 hover:text-yellow-400 transition"; %>

    <a href="/instance/<%= req.params.id %>" class="<%= mobileClass %>">Console</a>
    <a href="/instance/<%= req.params.id %>/files" class="<%= mobileClass %>">Files</a>
    <a href="/instance/<%= req.params.id %>/users" class="<%= mobileClass %>">Sub Users</a>
    <a href="/instance/<%= req.params.id %>/ftp" class="<%= mobileClass %>">FTP</a>
    <a href="/instance/<%= req.params.id %>/archives" class="<%= mobileClass %>">Backups</a>
    <a href="/instance/<%= req.params.id %>/network" class="<%= mobileClass %>">Network</a>
    <a href="/instance/<%= req.params.id %>/startup" class="<%= mobileClass %>">Settings</a>

    <% if (instance.Image.includes("java")) { %>
      <a href="/instance/<%= req.params.id %>/plugins" class="<%= mobileClass %>">Plugin Manager</a>
    <% } %>

    <% addons.plugins.forEach(plugin => { %>
      <% if (plugin.instancesidebar) { %>
        <% Object.entries(plugin.instancesidebar).forEach(([key, value]) => { %>
          <a href="<%= value.url.replace('%id%', req.params.id) %>" class="<%= mobileClass %>">
            <%= key %>
          </a>
        <% }) %>
      <% } %>
    <% }) %>

  </div>
</div>

<script>
  function openSlider() {
    mobileSidebar.classList.remove('-translate-x-full')
    mobileSidebar.classList.add('translate-x-0')
  }
  function closeSlider() {
    mobileSidebar.classList.add('-translate-x-full')
    mobileSidebar.classList.remove('translate-x-0')
  }
</script>
