<div>
  <%- include('./components/template') %>

  <main class="container flex-grow px-6 py-8 mx-auto animate-fade-in">

    <!-- Header -->
    <div class="flex items-center justify-between w-full pb-6 mx-auto animate-slide-in">
      <div class="flex flex-col">
        <h1 class="text-2xl font-bold text-yellow-400" style="font-family: 'Cabin';">
          Dashboard
        </h1>
        <p class="text-yellow-400/70 text-md">
          Monitor and manage your resources effectively.
        </p>
      </div>

      <!-- Breadcrumb -->
      <nav class="bg-[#1c1a12] border border-yellow-500/20 rounded-xl px-4 py-2">
        <ol class="flex items-center space-x-3 text-yellow-400/70">
          <li>
            <a href="#" class="hover:text-yellow-300 flex items-center gap-2">
              <i class="fas fa-home text-lg"></i>
              <span>Home</span>
            </a>
          </li>
          <li class="text-yellow-500/40">/</li>
          <li class="text-yellow-300 font-medium">Dashboard</li>
        </ol>
      </nav>
    </div>

    <!-- Welcome Banner -->
    <div
      class="bg-gradient-to-r from-amber-600 via-yellow-500 to-amber-700
             rounded-xl p-6 shadow-xl text-center animate-pop-in">

      <h2 class="text-xl font-semibold text-neutral-900 animate-text-fade">
        Welcome back!
      </h2>
      <p class="text-neutral-900/80">
        Manage your wallet, deploy resources, and upgrade deployments.
      </p>
    </div>

    <!-- Resource Stats -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-8 animate-fade-in">

      <div class="p-6 bg-[#1c1a12] border border-yellow-500/20 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-300">Total RAM</h3>
        <p class="text-3xl font-bold text-yellow-400">
          <%= max_resources.ram %> MiB
        </p>
      </div>

      <div class="p-6 bg-[#1c1a12] border border-yellow-500/20 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-300">Total CPU</h3>
        <p class="text-3xl font-bold text-yellow-400">
          <%= max_resources.cores %> Cores
        </p>
      </div>

      <div class="p-6 bg-[#1c1a12] border border-yellow-500/20 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-300">Total Disk</h3>
        <p class="text-3xl font-bold text-yellow-400">
          <%= max_resources.disk %> GiB
        </p>
      </div>
    </div>

    <!-- Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-8 animate-fade-in">

      <!-- Upgrade -->
      <div class="p-6 bg-[#14110a] border border-yellow-500/30 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-400">Upgrade Resources</h3>
        <p class="text-yellow-400/70">
          Need more power? Upgrade your RAM, CPU, or storage.
        </p>
        <a href="/store"
          class="mt-4 inline-flex items-center gap-2 px-6 py-2 font-medium
                 text-neutral-900 bg-yellow-500 rounded-lg
                 hover:bg-yellow-600 transition-all">
          <i class="fas fa-arrow-up"></i> Upgrade Now
        </a>
      </div>

      <!-- Manage -->
      <div class="p-6 bg-[#14110a] border border-yellow-500/30 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-400">Manage Servers</h3>
        <p class="text-yellow-400/70">
          View, configure, and control your deployed servers.
        </p>
        <a href="/instances"
          class="mt-4 inline-flex items-center gap-2 px-6 py-2 font-medium
                 text-neutral-900 bg-yellow-500 rounded-lg
                 hover:bg-yellow-600 transition-all">
          <i class="fas fa-cogs"></i> Manage Servers
        </a>
      </div>

      <!-- Create -->
      <div class="p-6 bg-[#14110a] border border-yellow-500/30 rounded-xl shadow-md
                  text-center hover:scale-105 transition-transform">
        <h3 class="text-lg font-medium text-yellow-400">Create Server</h3>
        <p class="text-yellow-400/70">
          Deploy a new server with ease.
        </p>
        <a href="/create-server"
          class="mt-4 inline-flex items-center gap-2 px-6 py-2 font-medium
                 text-neutral-900 bg-yellow-500 rounded-lg
                 hover:bg-yellow-600 transition-all">
          <i class="fas fa-plus-circle"></i> Create Server
        </a>
      </div>

    </div>
  </main>

  <%- include('./components/footer') %>
</div>

<style>
@keyframes fade-in {
  from { opacity: 0 }
  to { opacity: 1 }
}
@keyframes slide-in {
  from { transform: translateY(-10px); opacity: 0 }
  to { transform: translateY(0); opacity: 1 }
}
@keyframes pop-in {
  from { transform: scale(.95); opacity: 0 }
  to { transform: scale(1); opacity: 1 }
}
@keyframes text-fade {
  0% { opacity: 0; transform: translateY(-10px) }
  50% { opacity: .6 }
  100% { opacity: 1; transform: translateY(0) }
}

.animate-fade-in { animation: fade-in .8s ease-out }
.animate-slide-in { animation: slide-in .6s ease-out }
.animate-pop-in { animation: pop-in .5s ease-out }
.animate-text-fade { animation: text-fade 1.2s ease-out }
</style>
