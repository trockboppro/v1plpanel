<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= name %> â€“ Reset Password</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <link rel="preconnect" href="https://cdn.fontshare.com">
  <link href="https://api.fontshare.com/v2/css?f[]=general-sans@400,500,600,700&display=swap" rel="stylesheet">

  <style>
    body { font-family: 'General Sans', sans-serif; }

    .strength-bar {
      height: 6px;
      border-radius: 999px;
      transition: width .3s ease, background-color .3s ease;
    }
    .strength-weak { background: #ef4444; }
    .strength-medium { background: #f59e0b; }
    .strength-strong { background: #22c55e; }

    .eye-btn {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      opacity: .6;
      transition: .2s;
    }
    .eye-btn:hover { opacity: 1; }
  </style>
</head>

<body class="h-full bg-[#0b0d10] text-gray-300">
<div class="min-h-screen flex">

  <!-- LEFT -->
  <div class="flex flex-1 items-center justify-center px-6 lg:px-20">
    <div class="w-full max-w-sm bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl shadow-2xl p-8">

      <% if (logo == true) { %>
        <img class="h-12 mb-6 mx-auto" src="../assets/logo.png">
      <% } %>

      <h2 class="text-3xl font-semibold text-white text-center">
        Reset Password
      </h2>
      <p class="mt-2 text-sm text-gray-400 text-center">
        Enter your new secure password
      </p>

      <form action="/auth/reset/<%= token %>" method="POST" id="resetPasswordForm" class="mt-8 space-y-6">

        <!-- PASSWORD -->
        <div>
          <label class="block text-sm text-gray-400 mb-1">New Password</label>
          <div class="relative">
            <input
              id="password"
              name="password"
              type="password"
              required
              minlength="8"
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20
                     text-white placeholder-gray-500
                     focus:outline-none focus:ring-2 focus:ring-yellow-500 transition"
            >
            <span id="togglePassword1" class="eye-btn">
              ğŸ‘
            </span>
          </div>
        </div>

        <!-- CONFIRM -->
        <div>
          <label class="block text-sm text-gray-400 mb-1">Confirm Password</label>
          <div class="relative">
            <input
              id="confirm-password"
              name="confirm-password"
              type="password"
              required
              minlength="8"
              placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20
                     text-white placeholder-gray-500
                     focus:outline-none focus:ring-2 focus:ring-yellow-500 transition"
            >
            <span id="togglePassword2" class="eye-btn">
              ğŸ‘
            </span>
          </div>
        </div>

        <!-- STRENGTH -->
        <div>
          <div class="flex justify-between text-xs text-gray-400 mb-1">
            <span>Password strength</span>
            <span id="password-strength-label">0%</span>
          </div>
          <div class="w-full bg-white/10 rounded-full">
            <div id="password-strength-bar" class="strength-bar w-0"></div>
          </div>
        </div>

        <!-- BUTTON -->
        <button
          type="submit"
          class="w-full py-3 rounded-xl font-semibold text-black
                 bg-gradient-to-r from-yellow-400 to-amber-500
                 hover:from-yellow-500 hover:to-amber-600
                 transition transform hover:scale-[1.02] shadow-lg"
        >
          Reset Password
        </button>

        <% if (req.query.err === "InvalidToken") { %>
          <p class="text-sm text-red-400 text-center">
            Invalid or expired reset token.
          </p>
        <% } %>

      </form>

    </div>
  </div>

  <!-- RIGHT IMAGE -->
  <div class="hidden lg:block relative flex-1">
    <img class="absolute inset-0 h-full w-full object-cover brightness-75"
         src="https://i.imgur.com/IYpZHWi.jpeg">
    <div class="absolute inset-0 bg-gradient-to-r from-[#0b0d10] to-transparent"></div>
  </div>

</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const password = document.getElementById('password');
  const confirm = document.getElementById('confirm-password');
  const bar = document.getElementById('password-strength-bar');
  const label = document.getElementById('password-strength-label');

  document.getElementById('togglePassword1').onclick = () =>
    password.type = password.type === 'password' ? 'text' : 'password';

  document.getElementById('togglePassword2').onclick = () =>
    confirm.type = confirm.type === 'password' ? 'text' : 'password';

  document.getElementById('resetPasswordForm').addEventListener('input', () => {
    const val = password.value;
    let strength = 0;

    if (val.length >= 8) strength += 0.5;
    if (/\d/.test(val)) strength += 0.3;
    if (/[^A-Za-z0-9]/.test(val)) strength += 0.2;

    bar.style.width = `${strength * 100}%`;
    bar.className = 'strength-bar';

    if (strength < 0.5) bar.classList.add('strength-weak');
    else if (strength < 0.8) bar.classList.add('strength-medium');
    else bar.classList.add('strength-strong');

    label.textContent = `${Math.round(strength * 100)}%`;

    confirm.setCustomValidity(
      password.value !== confirm.value ? "Passwords do not match" : ""
    );
  });
});
</script>

</body>
</html>
